<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>web</display-name>
  <welcome-file-list>
    <welcome-file>bowlingajaxindex.html</welcome-file>
  </welcome-file-list>
 
  
   <servlet>
    <servlet-name>BowlingAjax</servlet-name>
    <servlet-class>com.bowling.util.AjaxServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>BowlingAjax</servlet-name>
    <url-pattern>/bajax/*</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.bowling.login.LoginServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>check</servlet-name>
    <servlet-class>com.bowling.login.Checkuserstatus</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>check</servlet-name>
    <url-pattern>/check/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>poll</servlet-name>
    <servlet-class>com.bowling.poll.PollServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>poll</servlet-name>
    <url-pattern>/poll/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>choicenumber</servlet-name>
    <servlet-class>com.bowling.login.SettinggameServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>choicenumber</servlet-name>
    <url-pattern>/choicenumber/*</url-pattern>
  </servlet-mapping>
</web-app>
